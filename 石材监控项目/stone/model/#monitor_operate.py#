    #RealDataOperate.Device_Name('pg0001')
    #RealDataOperate.Choice_Single_Device('pg0001')
    #RealDataOperate.Choice_State_Device('pg0001')
    RealDataOperate.Choice_Alarms_Device('pg0001')
